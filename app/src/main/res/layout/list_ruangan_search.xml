<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_ruangan_ujian"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_ruangan_ujian"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/man_search"/>

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nama_ruangan_ujian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FATEK - 1"
                    android:fontFamily="@font/neosans"
                    android:textColor="#272626"/>

                <TextView
                    android:id="@+id/jadwal_ujian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rabu, 26- Juni - 2021"
                    android:fontFamily="@font/neosans"
                    android:textColor="#272626"/>

                <TextView
                    android:id="@+id/kelompok_ujian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAINTEK"
                    android:fontFamily="@font/neosans"
                    android:textColor="#272626"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>