<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_home_title">

        <ImageView
            android:layout_marginStart="5dp"
            android:id="@+id/iv_admin"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_admin_panel"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin?"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/img_frame_qrcode"/>

        <ImageView
            android:id="@+id/iv_report"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_minimize"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_user_location"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#F4F4F4">

        <ImageView
            android:id="@+id/iv_user_location"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_location"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toEndOf="@+id/iv_user_location"
            android:layout_marginStart="3dp"
            android:id="@+id/tv_location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Palu"
            android:textSize="20sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_change_location"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_keyboard_arrow_down"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/banner_img"/>

    </LinearLayout>

</LinearLayout>