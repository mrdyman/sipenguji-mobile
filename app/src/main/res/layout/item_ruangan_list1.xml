<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_data_ruangan_container"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_above="@+id/btn_get_routes"
    android:layout_below="@+id/tv_data_ruangan_title"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_ruangan_list"
        android:backgroundTint="#92009D"
        android:layout_margin="10dp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/iv_gambar_ruangan_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#BA3949AB">

            <TextView
                android:id="@+id/tv_nama_ruangan_list"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fakultas Teknik"
                android:fontFamily="@font/neosans"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_alamat_ruangan"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Universitas Tadulako"
                android:fontFamily="@font/neosans"
                android:layout_marginEnd="10dp"
                android:textColor="@color/white"
                android:drawableTint="#92009D"
                app:drawableStartCompat="@drawable/ic_location"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>