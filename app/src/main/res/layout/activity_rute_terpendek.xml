<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RuteTerpendekActivity">

    <LinearLayout
        android:id="@+id/ll_container_maps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_location_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@drawable/shape_shadow">

        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:layout_width="320dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/orange"
            android:text="Harap sesuaikan kendaraan yang digunakan!"
            android:textAlignment="center"
            android:fontFamily="@font/helvetica"
            android:paddingTop="4dp"
            android:textColor="@color/black"
            android:background="@drawable/shape_oval"
            android:layout_gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_get_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:fontFamily="@font/helveticaroundedbold"
            android:text="Buka Navigasi"/>

    </LinearLayout>

</RelativeLayout>